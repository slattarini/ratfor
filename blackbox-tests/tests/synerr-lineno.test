#!/bin/sh

# Check that line numbers in error messages are ok

. ./defs.sh || exit 99

echo '}' > tst1.r
run_CMD -e 1 "$RATFOR" tst1.r || testcase_FAIL
mv stderr stderr1
$FGREP 'tst1.r:1:' stderr1 || testcase_FAIL

cat > tst2.r <<EOF
#1
} #2
#3
#4
} #5
#6
EOF
run_CMD -e 1 "$RATFOR" tst2.r || testcase_FAIL
mv stderr stderr2
$FGREP 'tst2.r:2:' stderr2 || testcase_FAIL
$FGREP 'tst2.r:5:' stderr2 || testcase_FAIL

cat > tst3.r <<EOF
{ #1
#2
#3
EOF

run_CMD -e 1 "$RATFOR" tst3.r || testcase_FAIL
mv stderr stderr3
# unexpected EOF in input
$FGREP 'tst3.r:3:' stderr3 || testcase_FAIL

testcase_PASS

