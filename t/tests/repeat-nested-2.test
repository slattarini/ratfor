# Check that nested "repeat/until" statements are processed without
# errors by Ratfor.

. ../lib/rat4-testsuite-init.sh || exit 99

echo 'repeat repeat stmt; until(cond1) until(cond2)' > tst.r
cat tst.r
run_RATFOR tst.r || testcase_FAIL
test ! -s stderr || testcase_FAIL

testcase_DONE

