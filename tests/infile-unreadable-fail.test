#!/bin/sh

# Check that ratfor barfs if input file does not exist.

. ../lib/rat4-t.sh || exit 99

: > unread.r
chmod a-r unread.r

run_RATFOR -e 1 unread.r || testcase_FATAL_FAILURE
rx='unread\.r: cannot open for reading: [pP]ermission denied'
$GREP "$rx" stderr || testcase_FATAL_FAILURE
test -s stdout && testcase_FATAL_FAILURE

testcase_PASS

