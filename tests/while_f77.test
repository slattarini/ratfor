#!/bin/sh

# Test the `while' statement (by compiling and running the generated
# fortran code)

. ../lib/rat4-t.sh || exit 99

require_fortran_compiler

cat > tst.r <<EOF
program testwhile
    implicit none
    integer x

    write(*,200)

    x = 0
    while(x < 8) {
        x = x + 2
        write(*,100) x
    }

    write(*,200)

    x = 20
    while (x >= 10)
        x = x -1
    write(*,100) x

    write(*,200)

    x = 14
    while(x > 5) x = x -1
    write(*,100) x

    write(*,200)

    call halt
100 format(I1)
200 format('---')
end
EOF

cat > exp <<EOF
---
2
4
6
8
---
9
---
5
---
EOF

cat tst.r

run_RATFOR tst.r || testcase_FAIL
mv stdout tst.f
run_F77 tst.f || testcase_FAIL
run_command ./tst.exe || testcase_FAIL
mv stdout got

cat exp
cat got

test -s stderr && testcase_FAIL
$DIFF_U exp got || testcase_FAIL

testcase_PASS

