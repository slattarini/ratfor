#!/bin/sh

# Check basics of `define' (with f77)

. ../lib/rat4-t.sh || exit 99

require_fortran_compiler

tr '_' "$TAB" >tst.r <<\EOF
    define(ONE, 1)
    define TWO 2
    define( _ THREE _, _3__ )
    program testprogram
        implicit none
        write(*,100) "ONE", ONE
        write(*,100) "TWO", TWO
        write(*,100) "THREE", THREE
100     format(A10,":",I1)
        call halt
    end # testprogram
EOF

cat > exp <<EOF
ONE:1
TWO:2
THREE:3
EOF

cat tst.r

run_RATFOR tst.r || testcase_FATAL_FAILURE
mv stdout tst.f
run_F77 tst.f || testcase_FATAL_FAILURE
run_command ./tst.exe || testcase_FATAL_FAILURE
ws_normalize <stdout | $SED -e 's/ *: */:/' >got
test -s stderr && testcase_FATAL_FAILURE

cat exp
cat got

$DIFF_U exp got || testcase_FATAL_FAILURE

testcase_DONE

