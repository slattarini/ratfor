#!/bin/sh

# Check basics of `define' (with f77)

. ./defs.sh || exit 99

require_fortran_compiler

tr '_' "$TAB" >tst.r <<\EOF
    define(ONE, 1)
    define TWO 2
    define( _ THREE _, _3__ )
    program testprogram
        implicit none
        write(*,100) "ONE", ONE
        write(*,100) "TWO", TWO
        write(*,100) "THREE", THREE
100     format(A10,":",I1)
        stop
    end # testprogram
EOF

cat > exp <<EOF
ONE:1
TWO:2
THREE:3
EOF

cat tst.r

run_CMD "$RATFOR" tst.r || testcase_FAIL
mv stdout tst.f
run_CMD $F77 -o tst.exe tst.f || testcase_FAIL
run_CMD ./tst.exe || testcase_FAIL
ws_normalize <stdout | $SED -e 's/ *: */:/' >got
test -s stderr && testcase_FAIL

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_PASS

