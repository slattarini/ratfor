# Check that ratfor generate correct code for a `return' statement inside
# a function (check done by compiling & running the generated code).

. ../lib/rat4-testsuite-init.sh || exit 99

rat4t_require_fortran_compiler

cat > tst.r <<EOF
integer function foo(i)
    integer i
    return i+1
end
integer function bar(i)
    integer i
    return(i*2)
end
program testreturn
    integer x, foo, bar
    x = foo(1)
    write(*,100) x
    x = bar(3)
    write(*,100) x
100 format(i1)
    call halt
end
EOF

cat tst.r

cat > exp <<EOF
2
6
EOF

run_RATFOR tst.r || testcase_FAIL
mv stdout tst.f
run_F77 tst.f || testcase_FAIL
run_command ./tst.exe || testcase_FAIL
test -s stderr && testcase_FAIL
mv stdout got

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_DONE

