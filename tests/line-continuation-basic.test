#!/bin/sh

# Test line continuation by `_' (simple usage).

. ../lib/rat4-t.sh || exit 99

tr '@' ' ' > tst.r <<\EOF
abc_
def
abc_
@def
abc___
def
"bl_
ah"
"bl_ah"
define sym x_
y
sym
EOF

cat > exp <<\EOF
abcdef
abc def
abc__def
"blah"
"bl_ah"
xy
EOF

cat tst.r

run_RATFOR tst.r || testcase_FAIL
$GREP -v '^[cC]' <stdout | ws_strip >got

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_DONE

