#!/bin/sh

# Check that line numbers in error messages are ok, even when expansion
# of multiline macros is involved.

. ./TestsAux/defs.sh || exit 99

$SED 's/#.*$//' > tst.r <<EOF
l1; l1; l1; #1
}; l2 #2
define foo bar #3
foo #4
define(zap, #5
quux1 #6
quux2); #7
#8
zap #9
case #10
# 11
define(err1,next) #12
#13
#14
err1 #15
define(err2, #16
fnord #17
break #18
fnord); #19
#20
err2 #21
#12
else #23
EOF

$AWK '{print NR ":" $0}' tst.r

run_RATFOR -e 1 tst.r || testcase_FAIL

$FGREP 'tst.r:2: illegal right brace' stderr || testcase_FAIL
$FGREP 'tst.r:10: illegal case' stderr || testcase_FAIL
$FGREP 'tst.r:15: illegal next' stderr || testcase_FAIL
$FGREP 'tst.r:21: illegal break' stderr || testcase_FAIL
$FGREP 'tst.r:23: illegal else' stderr || testcase_FAIL
$FGREP 'tst.r:12:' stderr && testcase_FAIL
$FGREP 'tst.r:16:' stderr && testcase_FAIL
$FGREP 'tst.r:17:' stderr && testcase_FAIL
$FGREP 'tst.r:18:' stderr && testcase_FAIL
$FGREP 'tst.r:19:' stderr && testcase_FAIL

testcase_PASS

