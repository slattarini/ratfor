#!/bin/sh

# Test the `repeat/until' statement (by compiling and running the
# generated fortran code)

. ../lib/rat4-t.sh || exit 99

require_fortran_compiler

cat > tst.r <<EOF
program testrepeat
    implicit none
    integer x

    write(*,200)

    x = 0
    repeat x = x + 1; until (x > 5);
    write(*,100) x

    write(*,200)

    x = 3
    repeat { x = x + 1 } until(x > 7);
    write(*,100) x

    write(*,200)

    x = 0
    repeat {
        write(*,100) x
        x = x + 2
    } until (x > 8);

    write(*,200)

    x = 5
    repeat {
        x = x -1
    } until (x < 10);
    write(*,100) x

    write(*,200)

    call halt
100 format(I1)
200 format('~~~')
end
EOF

cat > exp <<EOF
~~~
6
~~~
8
~~~
0
2
4
6
8
~~~
4
~~~
EOF

cat tst.r

run_RATFOR tst.r || testcase_FATAL_FAILURE
mv stdout tst.f
run_F77 tst.f || testcase_FATAL_FAILURE
run_command timer -t 10 ./tst.exe || testcase_FATAL_FAILURE
mv stdout got

cat exp
cat got

test -s stderr && testcase_FATAL_FAILURE
$DIFF_U exp got || testcase_FATAL_FAILURE

testcase_PASS

