#!/bin/sh

# Check that comments kept by the `-C' switch does not interfere with the
# "real" ratfor output

. ./defs.sh || exit 99

require_fortran_compiler

tr '_' "$TAB" >tst.r <<\EOF
program testprog
    # this is a "%c@mm3nt%'!
# this too is a "%c@mm3nt%'!
    integer x
100 format(I1)
    write(*,100) 1
# end
    x = 2
    # x = 3
    write(*,100) x
    x = 4
    write(*,100) x; # write(*,100) 5
#write(*,100) 7
    stop
end
EOF

cat > exp <<EOF
1
2
4
EOF

run_CMD "$RATFOR" -C tst.r || testcase_FAIL
mv stdout tst.f
run_CMD $F77 -o tst.exe tst.f || testcase_FAIL
run_CMD ./tst.exe || testcase_FAIL
ws_normalize <stdout >got
test -s stderr && testcase_FAIL

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_PASS

