#!/bin/sh

# Check that tabs are not improperly passed down in ratfor output.

. ../lib/rat4-t.sh || exit 99

tr '@' "$TAB" > tst.r <<\EOF
@
@ @ @;
  @@ @@;

@#@
 #@
# @ @@ ...?

@x = 1
x@= 1
x =@1
x@=@1

{@z = 12@3 }
@ { z = 22 }

foo(1)
foo(@1)
foo(1@)
foo(@1@)
foo@(@1@)

bar(@)
bar@()
bar@()
bar @ (  @)

define(BAZ,@s @ x@)
BAZ
@BAZ
BAZ@
@BAZ@
EOF

run_RATFOR tst.r || testcase_FATAL_FAILURE
mv stdout stdout1
$FGREP "$TAB" stdout1 && testcase_FATAL_FAILURE

run_RATFOR -C tst.r || testcase_FATAL_FAILURE
mv stdout stdout2
$FGREP "$TAB" stdout2 && testcase_FATAL_FAILURE

testcase_DONE

