#!/bin/sh

# Check that ratfor barfs if input file is a directory.

. ../lib/rat4-t.sh || exit 99

mkdir tst.d

run_RATFOR -e 1 tst.d || testcase_FATAL_FAILURE
rx='tst\.d: cannot open for reading: [iI]s a directory'
$GREP "$rx" stderr || testcase_FATAL_FAILURE
test -s stdout && testcase_FATAL_FAILURE

testcase_PASS

