#!/bin/sh

# Check that ratfor barfs if given a directory as output file.

. ./TestsAux/defs.sh || exit 99

mkdir tst.d
echo 'junk' > tst.r

run_command -e 1 "$RATFOR" -o tst.d tst.r || testcase_FAIL
rx='tst\.d: cannot open for writing: [iI]s a directory'
$GREP "$rx" stderr || testcase_FAIL

testcase_PASS

