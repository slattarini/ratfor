# Check that `define(SYM, VALUE)' works if VALUE contains semicolons.

. ../lib/rat4-testsuite-init.sh || exit 99

cat >tst.r <<EOF
define(sym1, a = 1; b = 1; c = 1;)
define(sym2, d = 1; ;;e = 1)
sym1
sym2
alive
EOF

run_RATFOR tst.r || testcase_FAIL
ws_normalize <stdout >xstdout

$FGREP sym xstdout && testcase_FAIL
$FGREP alive xstdout || testcase_FAIL
for x in a b c d e; do
    $GREP "$x *= *1" xstdout || testcase_FAIL
done

testcase_DONE

