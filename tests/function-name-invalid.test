#!/bin/sh

# Check that ratfor complains if te keyword `fuction' is not followed by
# an alphanumeric token.

. ./TestsAux/defs.sh || exit 99

echo 'function 123' > tst1.r
run_command -e 1 "$RATFOR" tst1.r || testcase_FAIL
mv stderr stderr1
$FGREP "invalid function name \`123'" stderr1 || testcase_FAIL

echo 'function *' > tst2.r
run_command -e 1 "$RATFOR" tst2.r || testcase_FAIL
mv stderr stderr2
$FGREP "invalid function name \`*'" stderr2 || testcase_FAIL

testcase_PASS

