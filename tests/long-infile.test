#!/bin/sh

# Check that ratfor works on very long input files

. ./defs.sh || exit 99

startlab=60000

$AWK </dev/null >tst.r "BEGIN {
    for (i = 1; i < $startlab; i++) {
        print \"# N.\", i
        print i, \"continue\";
        print \"x = \", i;
        print \"y = \", i*2;
    }
}"

$GREP -v '^#' <tst.r | ws_normalize >exp

run_CMD "$RATFOR" -l $startlab tst.r || testcase_FAIL
grep -v '^[cC]' <stdout | ws_normalize >got

$DIFF_U exp got || testcase_FAIL

testcase_PASS

