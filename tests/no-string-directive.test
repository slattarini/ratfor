#!/bin/sh

# Check that the `string' directive is not recognized anymore by ratfor.

. ../lib/rat4-t.sh || exit 99

cat > tst.r <<\EOF
string
string s0
string s1 '12abcdef'
string s2 "34ghijkl"
string s3  56mnopqr
EOF

cat tst.r

run_RATFOR tst.r || testcase_FATAL_FAILURE
$GREP -v '^[cC]' <stdout >stdout-t
mv -f stdout-t stdout
$FGREP 'string' stdout || testcase_FATAL_FAILURE
test `$FGREP 'string' stdout | wc -l` -eq 5 || testcase_FATAL_FAILURE
$FGREP '12abcdef' stdout || testcase_FATAL_FAILURE
$FGREP '34ghijkl' stdout || testcase_FATAL_FAILURE
$FGREP '56mnopqr' stdout || testcase_FATAL_FAILURE

testcase_DONE

# vim: ft=sh ts=4 sw=4 et
