#!/bin/sh

# Test `for(;;)' idiom

. ./TestsAux/defs.sh || exit 99

require_fortran_compiler

cat > tst.r <<EOF
program testforever
    implicit none
    integer x, y
    x = 10
    y = 20
    for(;;) {
        if (x > y)
          break
        write(*,100) x, y
        x = x + 2
        y = y + 1
    }
100 format(I2,' ',I2)
    call halt
end
EOF

cat > exp <<EOF
10 20
12 21
14 22
16 23
18 24
20 25
22 26
24 27
26 28
28 29
30 30
EOF

cat tst.r

run_CMD "$RATFOR" tst.r || testcase_FAIL
mv stdout tst.f
run_F77 tst.f || testcase_FAIL
run_CMD timer -t 10 ./tst.exe || testcase_FAIL
mv stdout got

cat exp
cat got

test -s stderr && testcase_FAIL
$DIFF_U exp got || testcase_FAIL

testcase_PASS

