# Check that tabs are not improperly passed down in ratfor output.

. ../lib/rat4-testsuite-init.sh || exit 99

tr '@' "$TAB" > tst.r <<\EOF
@
@ @ @;
  @@ @@;

@#@
 #@
# @ @@ ...?

@x = 1
x@= 1
x =@1
x@=@1

{@z = 12@3 }
@ { z = 22 }

foo(1)
foo(@1)
foo(1@)
foo(@1@)
foo@(@1@)

bar(@)
bar@()
bar@()
bar @ (  @)

define(BAZ,@s @ x@)
BAZ
@BAZ
BAZ@
@BAZ@
EOF

$SED -e "s/$TAB/^I/g" -e 's/^/^/' -e 's/$/$/' tst.r

run_RATFOR tst.r || testcase_FAIL
mv stdout stdout1
mv stderr stderr1
$FGREP "$TAB" stdout1 && testcase_FAIL

run_RATFOR -C tst.r || testcase_FAIL
mv stdout stdout2
mv stderr stderr2
$FGREP "$TAB" stdout2 && testcase_FAIL

testcase_DONE

