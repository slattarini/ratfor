# Check that `until(cond)' can have trailing white spaces.

. ../lib/rat4-testsuite-init.sh || exit 99

echo 'repeat { stmt } until(cond) ' >tst1.r
echo "repeat { stmt } until(cond)$TAB" >tst2.r
echo 'repeat { stmt } until(cond)   ' >tst3.r
echo "repeat { stmt } until(cond) $TAB$TAB$TAB  $TAB" >tst4.r

for i in 1 2 3 4; do
    cat tst$i.r
    run_RATFOR tst$i.r || testcase_FAIL
    mv stdout stdout$i
    mv stderr stderr$i
    test -s stderr$i && testcase_FAIL
done

testcase_DONE

