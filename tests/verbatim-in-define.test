# Test that `%'-escaping plays well with define builtin at the beginning
# of a line

. ../lib/rat4-testsuite-init.sh || exit 99

cat >tst.r <<EOF
define(x,%||)
define y %&&
x
y
EOF

cat >exp <<EOF
||
&&
EOF

cat tst.r

run_RATFOR tst.r || testcase_FAIL
$GREP -v '^[cC]' stdout >got

cat exp
cat got
$DIFF_U exp got || testcase_FAIL

testcase_DONE

