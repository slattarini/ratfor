# Check that the `%' verbatim escaping is *not* activated when found
# after a numerical label.

. ../lib/rat4-testsuite-init.sh || exit 99

cat >tst.r <<EOF
pass
1 % a && b
2% a || b
3$TAB% a == b
pass
EOF

cat tst.r

run_RATFOR -e IGNORE tst.r

$FGREP '%' stdout \
  || testcase_FAIL "character \`%' not found in output"
test x"`$FGREP -c '%' stdout`" = x"3" \
  || testcase_FAIL "bad count of output lines containing character \`%'"

for s in '&&' '||' '=='; do
  $FGREP "$s" stdout || testcase_FAIL "string \"$s\" not found in output"
done

testcase_DONE

