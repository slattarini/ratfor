#!/bin/sh

# Check that `-C' switch of ratfor preserve comments in output.

. ../lib/rat4-testsuite-init.sh || exit 99

cat >tst.r <<EOF
# this is a "%c@mm3nt%'!
blah blah blah
EOF

cat tst.r

run_RATFOR -C tst.r || testcase_FAIL
$GREP "^[cC].*\"%c@mm3nt%'!" stdout || testcase_FAIL
testcase_DONE

