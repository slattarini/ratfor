#!/bin/sh

# Test that the `switch/case' statement works also with non-positive
# integer constants (test done by compiling and running the generated
# fortran code).

. ./TestsAux/test-lib.sh || exit 99

require_fortran_compiler

cat > tst.r <<EOF
program testswtich
    integer i
100 format(A20);
    for(i = -3; i <= 3; i = i + 1) {
        switch(i) {
        case 0:
            write(*,100) 'ZERO';
        case 1:
            write(*,100) 'PLUS ONE';
        case -1:
            write(*,100) 'MINUS ONE';
        case -2, +2:
            write(*,100) 'PLUS/MINUS TWO';
        default:
            write(*,100) 'PLUS/MINUS MANY';
        }
    }
    call halt
end
EOF

cat > exp <<EOF
PLUS/MINUS MANY
PLUS/MINUS TWO
MINUS ONE
ZERO
PLUS ONE
PLUS/MINUS TWO
PLUS/MINUS MANY
EOF

cat tst.r

run_RATFOR tst.r || testcase_FAIL
mv stdout tst.f
run_F77 tst.f || testcase_FAIL
run_command ./tst.exe || testcase_FAIL
ws_normalize <stdout >got

cat exp
cat got

test -s stderr && testcase_FAIL
$DIFF_U exp got || testcase_FAIL

testcase_PASS

