# Check that an `until(cond) ...' with extra trailing tokens fails.

. ../lib/rat4-testsuite-init.sh || exit 99

echo 'repeat { stmt } until(cond) trash' >tst.r
cat tst.r
run_RATFOR -e 1 tst.r || testcase_FAIL
$FGREP ': extra tokens after until.' stderr || testcase_FAIL

testcase_DONE

