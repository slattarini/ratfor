#!/bin/sh

# Check that ratfor do automatic line continuation after lables, until a
# statement is found.

. ../lib/rat4-t.sh || exit 99

cat > tst.r <<EOF
100
foo

200


bar
EOF

cat tst.r

run_RATFOR tst.r || testcase_FAIL
$GREP '100.*foo' stdout || testcase_FAIL
$GREP '200.*bar' stdout || testcase_FAIL

testcase_DONE

