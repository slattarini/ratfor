#!/bin/sh

# Stress test for ratfor (by compiling and running generated fortran code)

. ../lib/rat4-t.sh || exit 99

require_fortran_compiler

tr '%@' "${NEWLINE}${TAB}" > tst.r <<EOF
subroutine ok(n){{integer n;write(*,100)n; 100%@@@@@ format(%'ok',%%I1 @@)}
@%@%@%@%end
%%;%;%%%%%%%%%%%%%%%%;%;%%%%%%%%@@;@;@@@@@@@@ %@  % @ @@% %@%@%;;;;;;;;;;;}
program stess3;implicit@none;integer@@@x,@y,%@%@%  %%  @@  @ z,t
x=100;y=10   @@ %%%%%%%%%%%%%%%%%%%%%%% z@@=%%%%1
if(%%%%%%%%%%%%%%x%%%%%%+1%%%%%%==101){call@@@@@@@@@@@@ok(1)} @ @ @ @ @ @ @
if@(y@@@*10==%%%%%%%%%%%x){{{{;;;;call ok( 2 ); ;}}@@@}%%%%%%%%%%%%%%%%%%%}
for (t=1;t<=%@z;%@t@%@=@%@t@%@+@%@1@)%%%%%%%%%%%%%call ok(t+@@2); c_
a_
ll halt; end #stress3
EOF

cat >exp <<EOF
ok1
ok2
ok3
EOF

$SED 's/$/$/' tst.r

run_RATFOR tst.r || testcase_FATAL_FAILURE
mv stdout tst.f
run_F77 tst.f || testcase_FATAL_FAILURE
run_command ./tst.exe || testcase_FATAL_FAILURE
test -s stderr && testcase_FATAL_FAILURE
mv stdout got

cat exp
cat got

test -s stderr && testcase_FATAL_FAILURE

$DIFF_U exp got || testcase_FATAL_FAILURE

testcase_PASS

