#!/bin/sh

# Test automatic line continuation (by grepping ratfor output).

. ./TestsAux/defs.sh || exit 99

for op in \
  '+' '-' '*' '/' '**' '//' \
  ',' \
  '&' '&&' '|' '||' \
  '=' \
  '==' '!=' '~=' '^=' \
  '<' '>' '<=' '>=' \
; do
    echo "'TEST ${op}'"
    echo "r${SPACE}${op}${NEWLINE}s"
    echo "u${TAB}${op}${SPACE}${NEWLINE}${NEWLINE}v"
    echo "x${op}${TAB}${NEWLINE}${NEWLINE}${NEWLINE}y"
done >tst.r

for op in \
  '+' '-' '*' '/' '**' '//' \
  ',' \
  '&' '&&' '|' '||' \
  '=' \
  '==' '!=' '~=' '^=' \
  '<' '>' '<=' '>=' \
; do
    echo "TEST ${op}"
    echo "r.@.s"
    echo "u.@.v"
    echo "x.@.y"
done >exp

cat tst.r

run_CMD "$RATFOR" tst.r || testcase_FAIL
$GREP -v '^[cC]' <stdout | ws_normalize \
  | $SED -e "/'/!s/ *\\.[a-z]*\\. */.@./" -e "/'/!s| *[*/+-] *|.@.|" \
         -e "s/^'\\(.*\\)'$/\\1/" >got

ls -l
cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_PASS

