# Test that different kinds of loops in ratfor can be safely nested
# (checks done by compiling and running the generated fortran code)

. ../lib/rat4-testsuite-init.sh || exit 99

rat4t_require_fortran_compiler

cat > tst.r <<EOF
program testnestloop
    implicit none
    integer x, y, z
    write(*,200)

    y = 0
    for(x = 1; x < 7; x = x + 2)
        while(y < x)
            y = y + 1
    write(*,100) x, y

    y = 5
    x = 10
    while (y < x) {
        repeat {
            x = x - 1
        } until (x < 2 * y);
        for (z = -1; z <= 2; z = z + 1)
            x = x + z
        y = y + 4
    }
    write(*,100) x, y

    write(*,200)
    call halt
100 format(I10,' ',I10)
200 format('~~~~~~~~')
end
EOF

cat > exp <<EOF
~~~~~~~~
7 5
12 13
~~~~~~~~
EOF

cat tst.r

run_RATFOR tst.r || testcase_FAIL
mv stdout tst.f
run_F77 tst.f || testcase_FAIL
run_command timer -t 10 ./tst.exe || testcase_FAIL
test -s stderr && testcase_FAIL
ws_normalize <stdout >got

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_DONE

