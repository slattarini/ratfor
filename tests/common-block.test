#!/bin/sh

# Check that common block declarations in input are not involved
# in improper automatic line continuation.

. ../lib/rat4-t.sh || exit 99

cat >tst.r <<EOF
common /blockname/
alone
EOF

cat tst.r

run_RATFOR tst.r || testcase_FATAL_FAILURE
$GREP -i "common.*alone" stdout && testcase_FATAL_FAILURE
testcase_DONE

