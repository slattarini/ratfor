# Check (through f77) that the ratfor `if' keyword is *not* recognized
# when found in the middle of a statement.

. ../lib/rat4-testsuite-init.sh || exit 99

helper_script="$srcdir/keyword-in-statement-middle_f77.sh"

test -f "$helper_script" \
  || testcase_HARDERROR "helper_script \`$helper_script' not found"
ls -l "$helper_script"

stmt='if'
. "$helper_script" # real test done here

testcase_DONE

