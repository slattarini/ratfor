# Check that nested "repeat/until" statements works.

. ../lib/rat4-testsuite-init.sh || exit 99

cat > tst.r <<EOF
program tstnestrpt
100 format('i=',I1)
100 format('j=',I1)
    integer i
    j = 0
    repeat
        i = 0
        repeat {
            i = i + 1
            j = j + 1
            write(*,100) i
            write(*,200) j
         }
        until(i > 2)
    until(j > 5)
    call halt
end
EOF

cat > exp <<EOF
i=1
j=1
i=2
j=2
i=3
j=3
i=1
j=4
i=2
j=5
i=3
j=6
EOF

cat tst.r

run_RATFOR tst.r || testcase_FAIL
mv stdout tst.f
run_F77 tst.f || testcase_FAIL
run_command ./tst.exe || testcase_FAIL
test -s stderr && testcase_FAIL
mv stdout got

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_DONE

