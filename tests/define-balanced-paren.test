#!/bin/sh

# Check that `define' works on text containing balanced parens.

. ../lib/rat4-t.sh || exit 99

cat >tst.r <<EOF
define(sym1, subr())
define(sym2, if (bar == 0.11) { func(2); func(1) } else error())
sym1
sym2
EOF

run_RATFOR tst.r || testcase_FATAL_FAILURE

$FGREP 'define' stdout  && testcase_FATAL_FAILURE
$GREP 'sym[12]' stdout  && testcase_FATAL_FAILURE
$FGREP 'bar' stdout     || testcase_FATAL_FAILURE
$FGREP 'func(1)' stdout || testcase_FATAL_FAILURE
$FGREP 'func(2)' stdout || testcase_FATAL_FAILURE
$FGREP 'error()' stdout || testcase_FATAL_FAILURE

testcase_DONE

# vim: ft=sh ts=4 sw=4 et
