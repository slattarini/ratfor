#!/bin/sh

# Test line continuation by `_', with the help of f77.

. ../lib/rat4-t.sh || exit 99

require_fortran_compiler

tr '@' ' ' > tst.r <<\EOF
program testprog
implicit none

in_
teger _
abc, ab_, c, x_
y,_
i

ab_ = 6

a_
b_
c_
= 7

x_
y = _
8

wri_
te(*,10_
0) 9
write(*,1_
0_
0) xy
write(*,100) ab_
c
write(*,100) ab_@
c = 7

f_
or(i = 0; i < 4; i = (i + 2)_
-1){ write(*,100) i }

100 format(I1)
call halt
end
EOF

cat >exp <<\EOF
9
8
7
6
0
1
2
3
EOF

cat tst.r

run_RATFOR tst.r || testcase_FATAL_FAILURE
mv stdout tst.f
run_F77 tst.f || testcase_FATAL_FAILURE
run_command ./tst.exe || testcase_FATAL_FAILURE
mv stdout got

cat exp
cat got

test -s stderr && testcase_FATAL_FAILURE
$DIFF_U exp got || testcase_FATAL_FAILURE

testcase_PASS

