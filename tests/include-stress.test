#!/bin/sh

# Stress testing for the `include' statement.

. ./TestsAux/defs.sh || exit 99

(set -C) >/dev/null 2>&1 && set -C

echo 'ONE' > inc1.r
echo 'TWO; include inc2b.r' > inc2.r
echo 'TWObis' > inc2b.r
(echo 'THREE'; echo 'include inc3b.r') > inc3.r
(echo 'THREEbis'; echo 'include inc3bb.r') > inc3b.r
echo 'THREEbisbis' > inc3bb.r
echo 'FOUR' | $SED 's/\(.\)/\1@/g' | tr @ "$NEWLINE" > inc4.r

tr '_' ' ' > tst.r <<EOF
@MARK1@
include inc1.r
@MARK2@
  include  inc2.r _
@MARK3@
include${TAB}inc3.r_
@MARK4@
${TAB}  include inc4.r ${TAB}
@MARK5@
EOF

cat > exp <<\EOF
@MARK1@
ONE
@MARK2@
TWO
TWObis
@MARK3@
THREE
THREEbis
THREEbisbis
@MARK4@
F
O
U
R
@MARK5@
EOF

run_CMD "$RATFOR" tst.r || testcase_FAIL

$SED -e '/^[cC]/d' -e "s/^$ws0p//" -e '/^$/d' stdout >got

# to have more information on test failure
cat inc1.r
cat inc2.r
cat inc2b.r
cat inc3.r
cat inc3b.r
cat inc3bb.r
cat inc4.r
cat tst.r
cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_PASS

# vim: ft=sh ts=4 sw=4 et
