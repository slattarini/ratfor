# Check that "deeply" nested "repeat/until" statements work.

. ../lib/rat4-testsuite-init.sh || exit 99

cat > tst.r <<EOF
function ifunc(i)
    integer i
10  format(I1)
    write(*,10) i
    i = i + 1
end

program tstnestrpt
    integer i
    integer ifunc
    i = 0
    repeat
        repeat
            repeat
                repeat
                    repeat
                        repeat
                            call ifunc(i)
                        until(i > 0)
                    until(i > 0)
                until(i > 0)
            until(i > 0)
        until(i > 0)
    until(i > 0)
    call halt
end
EOF

echo '0' >exp

cat tst.r

run_RATFOR tst.r || testcase_FAIL
mv stdout tst.f
run_F77 tst.f || testcase_FAIL
run_command ./tst.exe || testcase_FAIL
test -s stderr && testcase_FAIL
mv stdout got

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_DONE

