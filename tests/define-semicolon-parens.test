# Check that `define(SYM, VALUE)' works if VALUE contains semicolons.

. ../lib/rat4-testsuite-init.sh || exit 99


$SED -e "s/\\\\t/$TAB/g" > tst.r <<\EOF
define(sym1, a = 1;b = 2)
define(sym2,\tc = 3;\td = 4)
define(sym3, \t\t  e = 5; ;\t; ;;f = 6)
sym1
sym2
sym3
alive
EOF


cat > exp <<EOF
a=1
b=2
c=3
d=4
e=5
f=6
alive
EOF

cat tst.r

run_RATFOR tst.r || testcase_FAIL
test ! -s stderr || testcase_FAIL
$SED -e '/^[cC]/d' stdout | ws_normalize \
  | $SED  -e 's/ *= */=/' -e '/^$/d' >got

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_DONE

