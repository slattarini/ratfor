#!/bin/sh

# Check that ratfor does not unnecessarily overwrite files when multiple
# `-o' options are given

. ../lib/rat4-t.sh || exit 99

mkdir out.d

echo 'clobbered' > tst.r
echo 'safe' > safe
cp safe o1
cp safe o2
cp safe o3

run_RATFOR -o o1 -o o2 -o o3 tst.r || testcase_FATAL_FAILURE
test -s stderr && testcase_FATAL_FAILURE
$DIFF_U o1 safe || { (echo '~~~~~') 2>/dev/null; testcase_FATAL_FAILURE; }
$DIFF_U o2 safe || { (echo '~~~~~') 2>/dev/null; testcase_FATAL_FAILURE; }
$GREP clobbered o3 || testcase_FATAL_FAILURE

testcase_DONE

