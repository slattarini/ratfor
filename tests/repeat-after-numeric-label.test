# Check (through grep) that the ratfor `repeat' statement is processed
# correctly when found after a numerical label.

. ../lib/rat4-testsuite-init.sh || exit 99

helper_script=$srcdir/control-structure-after-numeric-label.sh

test -f "$helper_script" \
  || testcase_HARDERROR "helper_script \`$helper_script' not found"
ls -l "$helper_script"

stmt='repeat' stmt_arg='' stmt_post='' stmt_post_arg=''
. "$helper_script" # real test done here

testcase_DONE

