# Check that the `include' builtin for file inclusion is recognized *only*
# at the beginning of a statement when used on a single-quoted filename.

. ../lib/rat4-testsuite-init.sh || exit 99

helper_script=$srcdir/include-at-stmt-beginning-only.sh

test -f "$helper_script" \
  || testcase_HARDERROR "helper_script \`$helper_script' not found"
ls -l "$helper_script"

quote_char="'"
. "$helper_script" # real test done here

testcase_DONE

