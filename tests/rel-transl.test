#!/bin/sh

# Check translation of `<' in '.lt.', `==' in `.eq.', `&&' in `.and.', etc.

. ./defs.sh || exit 99

cat >map <<EOF
  &&  and
  &   and
  ||  or
  |   or
  >   gt
  <   lt
  >=  ge
  <=  le
  ==  eq
  !=  ne
  ~=  ne
  ^=  ne
  ^   not
  !   not
  ~   not
EOF

$SED 's/^ *\([^ ]*\)  *\([^ ]*\) *$/  .\2. \2/' <map >exp
cat exp

run_RATFOR -e 0 map || testcase_FAIL
$GREP -v '^[cC]' stdout | ws_normalize | $SED 's/^/  /' > got

$DIFF_U exp got || testcase_FAIL

testcase_PASS

