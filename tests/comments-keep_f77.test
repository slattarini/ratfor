#!/bin/sh

# Check that comments kept by the `-C' switch does not interfere with the
# "real" ratfor output

. ../lib/rat4-t.sh || exit 99

require_fortran_compiler

tr '_' "$TAB" >tst.r <<\EOF
program testprog
    # this is a "%c@mm3nt%'!
# this too is a "%c@mm3nt%'!
    integer x
100 format(I1)
    write(*,100) 1
# end
    x = 2
    # x = 3
    write(*,100) x
    x = 4
    write(*,100) x; # write(*,100) 5
#write(*,100) 7
    call halt
end
EOF

cat > exp <<EOF
1
2
4
EOF

run_RATFOR -C tst.r || testcase_FATAL_FAILURE
mv stdout tst.f
run_F77 tst.f || testcase_FATAL_FAILURE
run_command ./tst.exe || testcase_FATAL_FAILURE
test -s stderr && testcase_FATAL_FAILURE
ws_normalize <stdout >got

cat exp
cat got

$DIFF_U exp got || testcase_FATAL_FAILURE

testcase_DONE

