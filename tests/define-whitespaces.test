#!/bin/sh

# Check that 'define(SYMBOL,...)' preserve leading/trailing spaces

. ../lib/rat4-t.sh || exit 99

cat >tst.r <<EOF
define(sym1, text1)
define(sym2,text2 )
define(sym3, text3 )
a:sym1:a
b:sym2:b
c:sym3:c
EOF

run_RATFOR tst.r || testcase_FATAL_FAILURE

$FGREP 'a: text1:a' stdout  || testcase_FATAL_FAILURE
$FGREP 'b:text2 :b' stdout  || testcase_FATAL_FAILURE
$FGREP 'c: text3 :c' stdout || testcase_FATAL_FAILURE

testcase_PASS

