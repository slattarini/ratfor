#!/bin/sh

# Check that `define(SYM, VALUE)' works on multi-line VALUE.

. ./TestsAux/defs.sh || exit 99

cat >tst.r <<EOF
define(sym,
line1
line2
line3)
sym
alive
EOF

cat > exp <<EOF
line1
line2
line3
alive
EOF

cat tst.r

run_CMD "$RATFOR" tst.r || testcase_FAIL
$GREP -v '^[cC]' stdout | ws_normalize >got

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_PASS

