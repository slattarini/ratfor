#!/bin/sh

# Check that syntax errors are reported on stderr and in exit status

. ../lib/rat4-t.sh || exit 99

echo '}' > tst1.r
run_RATFOR -e 1 -- tst1.r || testcase_FATAL_FAILURE
mv stderr stderr1
test 1 -le "`wc -l <stderr1`"

cat > tst2.r <<EOF
} # illegal right brace
break # illegal break (not in do/while/for/repeat-until construct)
next # illegal next (not in do/while/for/repeat-until construct)
EOF
run_RATFOR -e 1 -- tst2.r || testcase_FATAL_FAILURE
mv stderr stderr2
test 3 -le "`wc -l <stderr2`"

testcase_DONE

