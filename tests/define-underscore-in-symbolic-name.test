#!/bin/sh

# Check use of `define' with macros having dollar characters (`$') in
# their names.

. ../lib/rat4-t.sh || exit 99

# WARNING: and underscore followed by a newline trigger line continuation,
# so we must be sure that no line here ends with an underscore.
$SED -e 's/_$/_ /' >tst.r <<EOF
define sym1     text
define sym_1    t_e_x_t

define foo      x0
define fo_o     x1
define fo__o    x2
define f_o_o    x3
define f__o_o   x4
define f__o__o  x5
define _foo     x6
define __foo    x7
define foo_     x8
define foo__    x9

define _        underscore
define __       doubleunderscore

sym1
sym_1
foo
fo_o
fo__o
f_o_o
f__o_o
f__o__o
_foo
__foo
foo_
foo__
_
__
EOF

cat >exp <<EOF
text
t_e_x_t
x0
x1
x2
x3
x4
x5
x6
x7
x8
x9
underscore
doubleunderscore
EOF

$SED -e 's/$/$/' -e 's/^/^/' tst.r

run_RATFOR tst.r || testcase_FATAL_FAILURE
test -s stderr && testcase_FATAL_FAILURE

$SED -e '/^[cC]/d' -e "s/^$ws0p//" -e '/^$/d' stdout >got

cat exp
cat got

$DIFF_U exp got || testcase_FATAL_FAILURE

testcase_DONE

# vim: ft=sh ts=4 sw=4 et
