#!/bin/sh

# Test line continuation by `_'.

. ../lib/rat4-t.sh || exit 99

cat > tst.r <<\EOF
#-------------------------------
a_
_
b
#-------------------------------
x_
_
_
_
_
_
y
EOF

cat > exp <<\EOF
ab
xy
EOF

cat tst.r

run_RATFOR tst.r || testcase_FATAL_FAILURE
$GREP -v '^[cC]' <stdout | ws_strip >got

cat exp
cat got

$DIFF_U exp got || testcase_FATAL_FAILURE

testcase_PASS

