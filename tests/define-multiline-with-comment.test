#!/bin/sh

# Check that `define(SYM, VALUE)' works on multi-line VALUE, even when
# there are comments involved.  This test avoid regressions related to
# an annoying bug that occurred in practice.

. ./defs.sh || exit 99

cat >tst.r <<EOF
define(sym,#
line1  #
line2$TAB#
line3
line4)
sym
alive
EOF

cat > exp <<EOF
line1
line2
line3
line4
alive
EOF

cat tst.r

run_RATFOR -e 0 tst.r || testcase_FAIL
$GREP -v '^[cC]' stdout | ws_normalize | tolower >got

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_PASS

# vim: ft=sh ts=4 sw=4 et
