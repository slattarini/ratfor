#!/bin/sh

# Check that incorrect (and only incorrect) usages of the `break'
# statement are caught.

. ./defs.sh || exit 99

data="$srcdir/break-next-fail.data"

test -f "$data" || testcase_HARDERROR "data file \`$data' not found"

$SED -e 's/ *#.*$//' -e 's/KWORD/break/g' <"$data" >tst.r
$AWK '/# *ERR/{ print "tst.r:" NR ": illegal break." }' <"$data" >exp

cat tst.r

run_RATFOR -e 1 tst.r || testcase_FAIL
mv stderr got

cat got
cat exp

$DIFF_U exp got || testcase_FAIL

testcase_PASS

