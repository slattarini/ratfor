#!/bin/sh

# Check that ratfor barfs when trying to create output file in an
# unwritable directory.

. ./TestsAux/defs.sh || exit 99

mkdir tst.d
chmod a-w tst.d

echo 'junk' > tst.r

run_RATFOR -e 1 -- -o tst.d/tst.out tst.r || testcase_FAIL
rx='tst\.d/tst\.out: cannot open for writing: [pP]ermission denied'
$GREP "$rx" stderr || testcase_FAIL

testcase_PASS

