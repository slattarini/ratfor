# Check that `repeat repeat STMT until(COND)' is processed without
# errors by C Ratfor.

. ../blackbox/lib/rat4-testsuite-init.sh || exit 99

echo 'repeat repeat { stmt } until(cond)' > tst.r
cat tst.r
run_RATFOR tst.r || testcase_FAIL
test -s stderr && testcase_FAIL
testcase_DONE

