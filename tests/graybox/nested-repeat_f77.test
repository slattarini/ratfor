# Check that `repeat repeat STMT until(COND)' works.

. ../blackbox/lib/rat4-testsuite-init.sh || exit 99

cat > tst.r <<EOF
begin tstnestrpt
100 format('ok ',I1)
    integer i
    i = 0
    repeat
        repeat { 
            i = i + 1
            write(*,100) i
            if (i => 4)
                goto 10
        } until(i > 10)
    continue
10  call halt
end
EOF

cat > exp <<EOF
ok 1
ok 2
ok 3
ok 4
EOF

cat tst.r

run_RATFOR tst.r || testcase_FAIL
mv stdout tst.f
run_F77 tst.f || testcase_FAIL
run_command ./tst.exe || testcase_FAIL
test -s stderr && testcase_FAIL
mv stdout got

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_DONE

