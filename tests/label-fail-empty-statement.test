#!/bin/sh

# Check that ratfor complains if a label is not followed by a statement

. ./TestsAux/defs.sh || exit 99

cat >tst.r <<EOF
foo
100;
bar
EOF

cat tst.r

run_RATFOR -e 1 tst.r || testcase_FAIL
$FGREP ':2: label followed by empty statement.' stderr || testcase_FAIL

testcase_PASS

