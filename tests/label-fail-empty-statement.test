#!/bin/sh

# Check that ratfor complains if a label is not followed by a statement

. ../lib/rat4-t.sh || exit 99

cat >tst.r <<EOF
foo
100;
bar
EOF

cat tst.r

run_RATFOR -e 1 tst.r || testcase_FATAL_FAILURE
$FGREP ':2: label followed by empty statement.' stderr \
  || testcase_FATAL_FAILURE

testcase_PASS

