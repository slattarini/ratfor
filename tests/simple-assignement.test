#!/bin/sh

# Check that simple assignement of a variable works.  Although incredible,
# thare have already been some bugs breaking this simple input.

. ../lib/rat4-t.sh || exit 99

cat >tst.r <<EOF
x = y
x=y
 x $TAB=  $TAB  y
EOF

cat tst.r

run_RATFOR tst.r || testcase_FATAL_FAILURE
test -s stderr && testcase_FATAL_FAILURE
$GREP -v '^[cC]' stdout | $GREP -v '^ *x *= *y *$' && testcase_FATAL_FAILURE

testcase_DONE

