# Test the `switch/case' statement (by compiling and running the generated
# fortran code)

. ../lib/rat4-testsuite-init.sh || exit 99

rat4t_require_fortran_compiler

cat > tst.r <<EOF
program testswtich
    integer i
100 format(A20);
    for(i = 1; i <= 6; i = i + 1) {
        switch(i) {
        case 1:
            write(*,100) 'ONE';
        case 2:
            write(*,100) 'TWO';
        case 3, 4:
            write(*,100) 'SOME';
        default:
            write(*,100) 'MANY';
        }
    }
    call halt
end
EOF

cat > exp <<EOF
ONE
TWO
SOME
SOME
MANY
MANY
EOF

cat tst.r

run_RATFOR tst.r || testcase_FAIL
mv stdout tst.f
run_F77 tst.f || testcase_FAIL
run_command ./tst.exe || testcase_FAIL
test -s stderr && testcase_FAIL
ws_normalize <stdout >got

cat exp
cat got

$DIFF_U exp got || testcase_FAIL

testcase_DONE

