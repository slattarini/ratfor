#!/bin/sh

# Test the `swittch/case' statement (by compiling and running the generated
# fortran code)

. ./defs.sh || exit 99

require_fortran_compiler

cat > tst.r <<EOF
program testswtich
    integer i
100 format(A20);
    for(i = 1; i <= 6; i = i + 1) {
        switch(i) {
        case 1:
            write(*,100) 'ONE';
        case 2:
            write(*,100) 'TWO';
        case 3, 4:
            write(*,100) 'SOME';
        default:
            write(*,100) 'MANY';
        }
    }
    stop
end
EOF

cat > exp <<EOF
ONE
TWO
SOME
SOME
MANY
MANY
EOF

cat tst.r

run_RATFOR -e 0 tst.r || testcase_FAIL
mv stdout tst.f
run_F77 -e 0 -- -o tst.exe tst.f || testcase_FAIL
run_CMD ./tst.exe -e 0 || testcase_FAIL
ws_normalize <stdout >got

cat got
cat exp

test -s stderr && testcase_FAIL
$DIFF_U exp got || testcase_FAIL

testcase_PASS

