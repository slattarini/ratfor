#!/bin/sh
# $Id$

# Test simple nested 'include'.

. ./defs.sh || exit 99

(set -C) >/dev/null 2>&1 && set -C

cat > top.r <<EOF
TopStart
include incl.r
TopEnd
EOF

cat > incl.r <<EOF
IncludeStart
include nest.r
IncludeEnd
EOF

cat > nest.r <<EOF
NestedIncludeStart
Body
NestedIncludeEnd
EOF

tolower > expected <<\EOF
TopStart
IncludeStart
NestedIncludeStart
Body
NestedIncludeEnd
IncludeEnd
TopEnd
EOF

run_RATFOR -e 0 top.r || testcase_FAIL

$SED -e '/^[cC]/d' -e "s/^$ws0p//" -e '/^$/d' stdout >got

$DIFF_U expected got || testcase_FAIL

testcase_PASS

