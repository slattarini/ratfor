#!/bin/sh

# Test simple nested `include'.

. ./TestsAux/rat4-t.sh || exit 99

(set -C) >/dev/null 2>&1 && set -C

cat > top.r <<EOF
TopStart
include incl.r
TopEnd
EOF

cat > incl.r <<EOF
IncludeStart
include nest.r
IncludeEnd
EOF

cat > nest.r <<EOF
NestedIncludeStart
Body
NestedIncludeEnd
EOF

cat > exp <<\EOF
TopStart
IncludeStart
NestedIncludeStart
Body
NestedIncludeEnd
IncludeEnd
TopEnd
EOF

run_RATFOR top.r || testcase_FAIL

$SED -e '/^[cC]/d' -e "s/^$ws0p//" -e '/^$/d' stdout >got

$DIFF_U exp got || testcase_FAIL

testcase_PASS

