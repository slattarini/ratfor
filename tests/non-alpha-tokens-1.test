#!/bin/sh

# Check that ratfor behaves well with non-alphanumeric tokens.
# This is meant to prevent regression w.r.t. already corrected bugs.

. ../lib/rat4-t.sh || exit 99

cat >tst.r <<\EOF
1 a*b
2 a**b
3 c/d
4 c//d
5 m&n
6 m&&n
7 r|s
8 r||s
9 u==v
10 u!=v
11 u~=v
12 u^=v
13 u!=v
EOF

cat tst.r

run_RATFOR tst.r || testcase_FATAL_FAILURE
test -s stderr && testcase_FATAL_FAILURE
$GREP -v '^[cC]' <stdout | ws_normalize >out
cat out

for rx in           \
    '^1 a.*b *$'    \
    '^2 a.*b *$'    \
    '^3 c.*d *$'    \
    '^4 c.*d *$'    \
    '^5 m.*n *$'    \
    '^6 m.*n *$'    \
    '^7 r.*s *$'    \
    '^8 r.*s *$'    \
    '^9 u.*v *$'    \
    '^10 u.*v *$'   \
    '^11 u.*v *$'   \
    '^12 u.*v *$'   \
    '^13 u.*v *$'   \
; do
    $GREP "$rx" out || testcase_FATAL_FAILURE
done

testcase_DONE

