#!/bin/sh

# Check that ratfor comments (and only real ratfor comments) are discarded.

. ../lib/rat4-t.sh || exit 99

cat > tst.r <<EOF
# throw me away
"# keep me"
EOF

run_RATFOR tst.r || testcase_FATAL_FAILURE
$GREP -i 'throw me away' stdout && testcase_FATAL_FAILURE
$GREP 'keep me' stdout || testcase_FATAL_FAILURE

testcase_PASS

