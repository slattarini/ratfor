# Check that nested "repeat/until" statements are processed without
# errors by Ratfor.

. ../lib/rat4-testsuite-init.sh || exit 99

echo 'repeat repeat stmt; until(cond1); until(cond2)' > tst1.r
cat tst1.r
run_RATFOR tst1.r || testcase_FAIL
mv stdout stdout1
mv stderr stderr1
test -s stderr1 && testcase_FAIL

cat >tst2.r <<EOF
repeat
    repeat
        repeat
            repeat
                stmt
            until(cond1)
        until(cond2)
    until(cond3)
until(cond4)
EOF
cat tst2.r
run_RATFOR tst2.r || testcase_FAIL
mv stdout stdout2
mv stderr stderr2
test -s stderr2 && testcase_FAIL

testcase_DONE

