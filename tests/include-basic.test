#!/bin/sh

# Check basic usage of `include' statement.

. ../lib/rat4-t.sh || exit 99

cat > included.r <<EOF
foo1
foo2
EOF

cat >tst1.r <<EOF
main1
include included.r
main2
EOF

cat > exp1 <<\EOF
main1
foo1
foo2
main2
EOF

echo 'bar' > included

cat >tst2.r <<EOF
main1
include included
main2
EOF

cat > exp2 <<\EOF
main1
bar
main2
EOF

cat tst1.r
cat included.r
cat tst2.r
cat included

run_RATFOR tst1.r || testcase_FAIL
mv stdout stdout1
mv stderr stderr1
$SED -e '/^[cC]/d' -e "s/^$ws0p//" -e '/^$/d' stdout1 >got1
cat exp1
cat got1
$DIFF_U exp1 got1 || testcase_FAIL

run_RATFOR tst2.r || testcase_FAIL
mv stdout stdout2
mv stderr stderr2
$SED -e '/^[cC]/d' -e "s/^$ws0p//" -e '/^$/d' stdout2 >got2
cat exp2
cat got2
$DIFF_U exp2 got2 || testcase_FAIL

testcase_PASS

