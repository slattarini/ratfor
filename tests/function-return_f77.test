#!/bin/sh

# Check that the `return' statements work inside a function (checks done
# by compiling & running generated fortran code).

. ./defs.sh || exit 99

require_fortran_compiler

cat > tst.r <<EOF
integer function foo()
    return 7
end
integer function bar(n)
    integer n
    return n+1
end
program testfuncret
    integer foo, bar, i
    i = 3
    write(*,100) foo(), bar(i);
100 format(I1,";",I1);
    stop
end
EOF

run_CMD "$RATFOR" tst.r || testcase_FAIL
mv stdout tst.f
run_F77 -- -o tst.exe tst.f || testcase_FAIL
run_CMD ./tst.exe || testcase_FAIL
test x"`cat stdout`" = x"7;4" || testcase_FAIL

testcase_PASS

